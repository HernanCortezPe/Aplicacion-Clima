<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:id="@+id/txtDiayFecha"
            android:text="Fecha y Hora"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:drawableEnd="@drawable/ic_sentiment_very_satisfied_black_24dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:id="@+id/txtPronostico"
            android:layout_margin="10dp"
            android:text="Pronostico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:drawableEnd="@drawable/ic_sentiment_very_satisfied_black_24dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:id="@+id/txtTemperatura"
            android:layout_margin="10dp"
            android:text="Temperatura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



    </LinearLayout>

<LinearLayout
    android:orientation="horizontal"
    android:weightSum="3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_marginStart="10dp"
        android:layout_weight="1"
        android:drawableLeft="@drawable/ic_sentiment_very_satisfied_black_24dp"
        android:drawablePadding="5dp"
        android:id="@+id/txtProbLluvia"
        android:text="25%"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:textSize="9sp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
    <TextView
        android:layout_marginStart="10dp"
        android:layout_weight="1"
        android:drawableLeft="@drawable/ic_sentiment_very_satisfied_black_24dp"
        android:drawablePadding="5dp"
        android:id="@+id/txtVelViento"
        android:text="25%"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:textSize="9sp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
    <TextView
        android:layout_marginStart="10dp"
        android:layout_weight="1"
        android:drawableLeft="@drawable/ic_sentiment_very_satisfied_black_24dp"
        android:drawablePadding="5dp"
        android:id="@+id/txtHumedad"
        android:text="25%"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:textSize="9sp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />


</LinearLayout>


</LinearLayout>